<style>
  h1 {
    color: #fff;
  }
  table {
    with: 100%;
    width: 100%;
    margin: 0 auto;
    border-collapse: collapse;
    border: 0;
    text-align: center;
  }
  th {
    padding: 6px 8px;
    background: #FEA841;
    color: #fff;
    border-bottom: 3px solid #FEA841;
    font-size: 15px;
  }
  td:first-child {
    text-align: left;
  }
  td {
    padding: 6px  8px;
    border-bottom: 1px solid #FEA841;
  }
  table a {
    color: #fff;
  }
</style>

<div class="container clearfix">
  <h1>► Lista de convidados</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>N° Acompanhantes</th>
        <th>Confirmado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.accompanying_number %></td>
        <td><%= guest.is_confirmed ? 'Sim' : 'Não' %></td>
        <td><%= link_to 'Detalhes', guest %></td>
        <td><%= link_to 'Editar', edit_guests_path(guest) %></td>
        <td><%= link_to 'Deletar', guest, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'Criar convidado', new_guests_path, :class => 'bnt-apparence' %>
</div>

